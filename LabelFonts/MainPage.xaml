<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LabelFonts"
             x:Class="LabelFonts.MainPage">
    
    <StackLayout>
        <!-- Place new controls here -->
        <Label Text="Testando Frase 1!"
               FontSize="20"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand"
               x:Name="Label_01"
               FontFamily="Laila-SemiBold.ttf#Laila-SemiBold.ttf"
               />
        
        <Label Text="Testando Frase 2!"
               FontSize="25"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand"
               x:Name="Label_02"
               FontFamily="Srisakdi-Regular.ttf#Srisakdi-Regular.ttf"
               />
        
        <Label Text="Testando Frase 3!"
               FontSize="30"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand"
               x:Name="Label_03"
               FontFamily="Pacifico-Regular.ttf#Pacifico-Regular.ttf"
               />
        
        <Button Text="Mudar Fontes"
               HorizontalOptions="Center"
               VerticalOptions="CenterAndExpand"
               Clicked="MudarFonte"
               />
    </StackLayout>
</ContentPage>